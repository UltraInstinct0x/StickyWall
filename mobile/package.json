{
  "name": "DigitalWall",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace DigitalWallMobile.xcworkspace -scheme DigitalWallMobile -configuration Release -sdk iphoneos build",
    "bundle:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "bundle:ios": "react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle",
    "postinstall": "cd ios && pod install"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native/new-app-screen": "0.80.1",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/stack": "^6.3.0",
    "@reduxjs/toolkit": "^2.2.0",
    "react-redux": "^9.1.0",
    "axios": "^1.10.0",
    "react": "19.1.0",
    "react-native": "0.80.1",
    "react-native-config": "^1.5.5",
    "react-native-receive-sharing-intent": "^2.0.0",
    "react-native-share": "^12.1.0",
    "react-native-fast-image": "^8.6.0",
    "react-native-gesture-handler": "^2.17.0",
    "react-native-reanimated": "^3.15.0",
    "react-native-safe-area-context": "^4.10.0",
    "react-native-screens": "^3.31.0",
    "react-native-vector-icons": "^10.1.0",
    "react-native-image-picker": "^7.1.0",
    "react-native-document-picker": "^9.3.0",
    "react-native-permissions": "^4.1.0",
    "@react-native-community/netinfo": "^11.3.0",
    "react-native-background-job": "^0.1.1",
    "react-native-notifications": "^5.1.0",
    "react-native-keychain": "^8.2.0",
    "react-native-device-info": "^10.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "19.0.0",
    "@react-native-community/cli-platform-android": "19.0.0",
    "@react-native-community/cli-platform-ios": "19.0.0",
    "@react-native/babel-preset": "0.80.1",
    "@react-native/eslint-config": "0.80.1",
    "@react-native/metro-config": "0.80.1",
    "@react-native/typescript-config": "0.80.1",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.1.0",
    "@types/react-test-renderer": "^19.1.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
